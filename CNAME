            font-family: 'Arial', sans-serif;
            margin: 0;
            overflow: hidden;
            /* Mencegah scroll saat tombol membesar */
        }

        .container {
            text-align: center;
        }

        /* Gambar lucu di atas (Gif Beruang/Kucing) */
        .gif-container img {
            width: 200px;
            height: auto;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        h1 {
            color: #db2777;
            font-size: 2rem;
